[user]
	name = Enrico Ghirardi
	email = i@choco.me
[credential]
	helper = osxkeychain
[push]
	default = simple
[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
	pager = lest
[color]
	ui = auto
	interactive = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green
[color "status"]
	added = yellow
	changed = green
	untracked = red
[diff]
	tool = vimdiff
	algorithm = histogram
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[alias]
	undo-commit = reset --soft HEAD^
	lg = log --graph --decorate --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
